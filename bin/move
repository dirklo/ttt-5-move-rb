#!/usr/bin/env ruby

require_relative '../lib/move.rb'
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
puts "Where would you like to move?"

display_board(board)

input = gets.strip

arr_index = input_to_index(input)

move(board, arr_index, "X")

display_board(board)